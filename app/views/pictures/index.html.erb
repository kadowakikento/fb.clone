<p id="notice"><%= notice %></p>

<h2>投稿一覧</h2>

<table>
  <thead>
    <tr>
      <th>投稿</th>
      <th>画像</th>
      <th>ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.content %></td>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to '詳細', picture_path(picture.id) %></td>
        <td><%= link_to '編集', edit_picture_path(picture.id) %></td>
        <td><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除して良いですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい投稿', new_picture_path %>
